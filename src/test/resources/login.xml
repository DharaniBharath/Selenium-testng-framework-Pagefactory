<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="All Test Suite" verbose="2" preserve-order="true">

    <!-- Listeners (optional but best practice) -->
    <listeners>
        <listener class-name="com.Listeners.MyListener"/>
    </listeners>

    <test name="Login Test Cases">
        <classes>
            <class name="com.testcases.LoginTest">
                <methods>
                    <include name="verifyloginwith_valid_credentials"/>
                    <include name="verifyloginwith_invalid_credentials"/>
                    <include name="verifyloginwith_invalid_email_valid_password"/>
                    <include name="verifyloginwith_valid_email_invalid_password"/>
                    <include name="verifyloginwithout_email_password"/>
                    <include name="verifyloginwithInvalidCredential"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>
